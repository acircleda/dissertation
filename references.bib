  keywords = {gender},
}

@Article{mead2012,
  title = {Information {{Seeking About Global Climate Change Among Adolescents}}: {{The Role}} of {{Risk Perceptions}}, {{Efficacy Beliefs}}, and {{Parental Influences}}},
