  keywords = {gender,sociology,women},
}

@Article{ergas2021,
  title = {Does {{Gender Climate Influence Climate Change}}? {{The Multidimensionality}} of {{Gender Equality}} and {{Its Countervailing Effects}} on the {{Carbon Intensity}} of {{Well-Being}}},
